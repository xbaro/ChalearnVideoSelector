extends layout

block content  
   .container
        header 
            h1 Administration
            .logout 
                a(href="/") Instructions
                a(href="/video") Video Labeling
                a(href="/stats") Statistics                
                a(href="/auth/signout") Logout #{user.attributes.username}                
        .body    
            if(message)
                div
                    p #{message}
            form(role='form', action="/admin/set/videoPath", method="post")
                header Videos Path
                label Path
                input.form-control(type='text', name="value", placeholder='Enter absolute path')                
                button.btn.btn-default(type='submit') Set
            form(role='form', action="/admin/set/backupPath", method="post")
                header Backup Path
                label Path
                input.form-control(type='text', name="value", placeholder='Enter absolute path')                
                button.btn.btn-default(type='submit') Set
            form(role='form', action="/admin/set/exportPath", method="post")
                header Export Path
                label Path
                input.form-control(type='text', name="value", placeholder='Enter absolute path')                
                button.btn.btn-default(type='submit') Set
            form(role='form', action="/admin/resetDB", method="post")
                header Reset the Videos from Database                                
                button.btn.btn-default(type='submit') RESET
            form(role='form', action="/admin/backup", method="post")
                header Backup database to disk
                button.btn.btn-default(type='submit') BACKUP
            form(role='form', action="/admin/load", method="post")
                header Load videos from path                                
                button.btn.btn-default(type='submit') LOAD
            form(role='form', action="/admin/export", method="post")
                header Export labeled videos                                
                button.btn.btn-default(type='submit') EXPORT
            
                