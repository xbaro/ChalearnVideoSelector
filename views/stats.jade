extends layout

block content
    h1= title
    div.statsTable
        table                         
            tbody        
                tr
                    td Labeled
                    td Unlabeled
                    td Accepted
                    td With Micro-Cuts
                    td Discarded
                    td Total    
                tr
                    td= videoData.TL
                    td= videoData.TNL
                    td= videoData.T1
                    td= videoData.T2
                    td= videoData.T3
                    td 
                        b #{videoData.total}
    div.statsTable
        table
            tbody
                tr
                    td Ranking
                    td User
                    td Labeled Videos
                    td Accepted
                    td With Micro-Cuts
                    td Discarded
                    td Pending           
                each row, i in userData                    
                    tr
                        if row.labeler == username
                            td: b #{i+1}
                            td: b #{row.labeler}
                        else 
                            td= i+1
                            td= row.labeler
                        td= row.TL
                        td= row.T1
                        td= row.T2
                        td= row.T3
                        td= row.TNL